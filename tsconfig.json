{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES6",
    "module": "UMD",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,

    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,

    "sourceMap": true,
    "inlineSourceMap": false,

    "skipLibCheck": false,

    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true
  }
}
